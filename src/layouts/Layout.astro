---
import '@/styles/global.css';

import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
    title?: string;
    description?: string;
}

const {
    title = 'TechCrafted.dev – Tecnología, IA y Desarrollo',
    description = 'Un espacio dedicado a la tecnología, el desarrollo y grandes ideas que merecen compartirse.'
} = Astro.props;

const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : undefined;
const ogImageUrl = Astro.site ? new URL('/og-image.jpg', Astro.site) : undefined;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content={description}>

        {canonicalUrl && <link rel="canonical" href={canonicalUrl.href} />}

		<!-- Open Graph -->
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
        {ogImageUrl && <meta property="og:image" content={ogImageUrl.href} />}
		{canonicalUrl && <meta property="og:url" content={canonicalUrl.href} />}
		<meta property="og:type" content="website">

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		{ogImageUrl && <meta name="twitter:image" content={ogImageUrl.href} />}

		<title>{title}</title>

		<!-- Favicons & PWA -->
		<link rel="icon" type="image/webp" sizes="48x48" href="/icon_48x48.webp">
		<link rel="apple-touch-icon" type="image/webp" sizes="180x180" href="/icon_180x180.webp">
		<link rel="icon" type="image/webp" sizes="192x192" href="/icon_192x192.webp">
		<link rel="icon" type="image/webp" sizes="512x512" href="/icon_512x512.webp">
		<link rel="manifest" href="/manifest.webmanifest">

		<script async defer src="https://stats.techcrafted.dev/script.js" data-website-id="77f28db1-2409-4e33-8e45-c81b3bacc260" data-domains="techcrafted.dev"></script>
	</head>
	<body>
		<ThemeToggle />
		<slot />
	</body>
</html>
