---
import Layout from '../layouts/Layout.astro';

import BackgroundImage from '../assets/background.webp';
import LogoTechCrafted from '../assets/logo.webp';
---

<Layout>
    <div id="mask_seccion" class="fixed top-0 w-full h-screen bg-white">
        <button class="fixed top-4 right-4 z-50 bg-black-800 p-2 hover:bg-black-700 transition-colors">
            <a href="https://techcrafted.dev"><i class="text-black fa-solid fa-sun fa-lg"></i></a>
        </button>
        <section>
            <img
                src={BackgroundImage.src}
                alt="Background Image"
                id="background"
                class="w-full h-full object-cover fixed inset-0 z-0"
            />
            <div id="section_tech" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex flex-col items-center gap-8">
                <img
                    src={LogoTechCrafted.src}
                    alt="TechCrafted Logo"
                    id="logo"
                    class="scale-64 h-auto block overflow-hidden"
                />
                <cite id="cite" class="text-black not-italic w-150 text-center text-2xl font-bold">
                    Un espacio dedicado a la tecnología, el desarrollo
                    y grandes ideas que merecen compartirse.
                </cite>
                <p id="parraf" class="text-black not-italic w-128 text-center text-xl font-bold">
                    Descubre más o conecta conmigo en redes.
                </p>
            </div>
        </section>
        <div class="text-black fixed bottom-0 left-0 right-0 flex justify-center items-center gap-6 p-4 bg-black-800">
            <a href="https://x.com/TRuHa83" target="_blank" aria-label="X (Twitter)"><i class="fab fa-x-twitter fa-xl"></i></a>
            <a href="https://github.com/TRuHa83" target="_blank" aria-label="GitHub"><i class="fab fa-github fa-xl"></i></a>
            <a href="https://www.linkedin.com/in/sergio-trujillo-de-la-nuez-32a4a727/" target="_blank" aria-label="LinkedIn"><i class="fab fa-linkedin fa-xl"></i></a>
        </div>
    </div>
    <div>
        <section id="section_links" class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full max-w-6xl px-4 flex flex-col md:flex-row items-center justify-center gap-24">
            <div class="relative w-full md:w-1/3">
                <a href="/news" class="block">
                    <div class="relative overflow-hidden rounded-2xl bg-white p-1 shadow-[0_10px_30px_rgba(0,_0,_0,_0.1)] transition-all duration-300 hover:shadow-[0_20px_50px_rgba(8,_112,_184,_0.2)]">
                        <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl"></div>
                        <div class="relative bg-white rounded-xl p-8">
                            <div class="absolute inset-0 opacity-10">
                                <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_30%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
                            </div>
                            <div class="absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-gray-100 to-transparent opacity-70"></div>
                            <div class="relative z-10">
                                <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-gray-50 to-gray-100 text-gray-700 shadow-md">
                                    <!-- Icono ejemplo -->
                                    <i class="fa-solid fa-newspaper fa-2xl"></i>
                                </div>
                                <h3 class="mb-3 text-black text-xl font-semibold">Noticias</h3>
                                <p class="text-sm text-gray-500 mb-5">Últimas novedades y tendencias tecnológicas.</p>
                                <div class="inline-flex items-center justify-center gap-1.5 text-sm font-medium px-4 py-2 rounded-lg bg-gray-100 text-gray-600">
                                    <span>Explorar</span>
                                    <i class="fa-solid fa-arrow-right h-3.5 w-3.5"></i>
                                </div>
                            </div>
                            </div>
                    </div>
                </a>
            </div>
            <div class="relative w-full md:w-1/3">
                <a href="/portfolio" class="block">
                  <div class="relative overflow-hidden rounded-2xl bg-white p-1 shadow-[0_10px_30px_rgba(0,_0,_0,_0.1)] transition-all duration-300 hover:shadow-[0_20px_50px_rgba(8,_112,_184,_0.2)]">
                    <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl"></div>
                    <div class="relative bg-white rounded-xl p-8">
                      <div class="absolute inset-0 opacity-10">
                        <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_30%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
                      </div>
                      <div class="absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-gray-100 to-transparent opacity-70"></div>
                      <div class="relative z-10">
                        <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-gray-50 to-gray-100 text-gray-700 shadow-md">
                          <i class="fa-solid fa-briefcase fa-2xl"></i>
                        </div>
                        <h3 class="mb-3 text-black text-xl font-semibold">Portafolio</h3>
                        <p class="text-sm text-gray-500 mb-5">Proyectos destacados y trabajos recientes.</p>
                        <div class="inline-flex items-center justify-center gap-1.5 text-sm font-medium px-4 py-2 rounded-lg bg-gray-100 text-gray-600">
                          <span>Explorar</span>
                          <i class="fa-solid fa-arrow-right h-3.5 w-3.5"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
            </div>
            <div class="relative w-full md:w-1/3">
                <a href="/blog" class="block">
                  <div class="relative overflow-hidden rounded-2xl bg-white p-1 shadow-[0_10px_30px_rgba(0,_0,_0,_0.1)] transition-all duration-300 hover:shadow-[0_20px_50px_rgba(8,_112,_184,_0.2)]">
                    <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl"></div>
                    <div class="relative bg-white rounded-xl p-8">
                      <div class="absolute inset-0 opacity-10">
                        <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_30%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
                      </div>
                      <div class="absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-gray-100 to-transparent opacity-70"></div>
                      <div class="relative z-10">
                        <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-gray-50 to-gray-100 text-gray-700 shadow-md">
                          <i class="fa-solid fa-blog fa-2xl"></i>
                        </div>
                        <h3 class="mb-3 text-black text-xl font-semibold">Blog</h3>
                        <p class="text-sm text-gray-500 mb-5">Artículos, tutoriales y recursos útiles.</p>
                        <div class="inline-flex items-center justify-center gap-1.5 text-sm font-medium px-4 py-2 rounded-lg bg-gray-100 text-gray-600">
                          <span>Explorar</span>
                          <i class="fa-solid fa-arrow-right h-3.5 w-3.5"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
        </section>
    </div>
</Layout>

<style>
    #section_links {
        visibility: hidden;
        opacity: 0;
        transform: scale(100);
    }

    #section_links > div {
        margin: 3rem 0;
    }

    #section_links > div > button {
        width: 250px;
        text-align: center;
        background: white;
        border-radius: 16px;
        padding: 0.75rem 2.5rem;
        color: #333333;
        font-size: 2rem;
        font-weight: 600;
        box-shadow: 0 0 16px rgba(20, 20, 20, 0.5);
        cursor: pointer;
        transition:
            transform 0.2s,
            box-shadow 0.2s;
        outline: none;
    }

    #section_links > div > button:hover,
    #section_links > div > button:focus {
        transform: scale(1.2);
        box-shadow: 0 0 16px rgba(0, 0, 0, 0.7);
    }
</style>

<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger'

    gsap.registerPlugin(ScrollTrigger);

    const tl = gsap.timeline({
        ease: "power2.out",
        scrollTrigger: {
            scrub: 1
        }
    });

    tl
        .to('#mask_seccion', { background: 'linear-gradient(150deg, #f2f4f4 30%, #aed6f1 100%)'})
        .to('#background', { opacity: 0.6, duration: 1 })
        .to('#section_tech', {scale: 0, opacity: 1, duration: 1}, "<")
        .to('#section_links', {autoAlpha: 1, scale: 1, opacity: 1, duration: 2}, "<")
</script>